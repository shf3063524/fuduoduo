<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_layout_set_return"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/cl_fff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_arrows_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改支付密码"
            android:textColor="@color/cl_333"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/m_tv_login_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cl_fff"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingEnd="13dp"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/m_tv_verification_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="验证码"
            android:textColor="@color/cl_333"
            android:textSize="14sp" />

        <com.hjkj.fuduoduo.view.ClearEditText
            android:id="@+id/m_cet_sms_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:layout_toEndOf="@+id/m_tv_verification_code"
            android:background="@color/transparent"
            android:layout_toStartOf="@+id/m_view"
            android:layout_marginEnd="20dp"
            android:digits="0123456789"
            android:hint="短信验证码"
            android:inputType="number"
            android:lines="1"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/cl_333"
            android:textSize="14sp" />

        <View
            android:id="@+id/m_view"
            android:layout_width="2dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="19dp"
            android:layout_toStartOf="@+id/m_tv_get_code"
            android:background="@color/cl_f6" />

        <TextView
            android:id="@+id/m_tv_get_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="获取验证码"
            android:textColor="@color/cl_e51C23"
            android:textSize="13sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/m_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_frame_cl_f5a5a7"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/cl_fff"
        android:textSize="14sp" />
</LinearLayout>