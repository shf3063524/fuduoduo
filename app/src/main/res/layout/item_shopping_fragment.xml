<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="164dp"
    android:layout_marginBottom="10dp"
    android:layout_height="wrap_content"
    android:background="@color/cl_fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="19dp"
        android:text="BRITA碧然德"
        android:textColor="@color/cl_122b64"
        android:textSize="12sp" />

    <ImageView
        android:layout_width="83dp"
        android:layout_height="95dp"
        android:layout_marginStart="44dp"
        android:background="@color/cl_122b64" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxEms="14"
        android:text="BRITA碧然德滤水进水看电视剧是考虑到就算了"
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/m_tv_integral_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="580.00"
            android:textColor="@color/cl_e51C23"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/m_tv_integral_one"
            android:text="积分"
            android:textColor="@color/cl_e51C23"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/ic_shopping_short_button" />
    </RelativeLayout>
</LinearLayout>