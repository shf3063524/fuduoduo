<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_layout_set_return"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/cl_fff">

        <ImageView
            android:id="@+id/m_iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@mipmap/ic_arrows_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人资料"
            android:textColor="@color/cl_333"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/m_tv_finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="完成"
            android:textColor="@color/cl_e51C23"
            android:textSize="14sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/m_layout_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:background="@color/cl_fff"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <ImageView
            android:id="@+id/m_iv_head"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_iv_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="更换头像"
            android:textColor="#ffe51c23"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/cl_fff"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingBottom="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="用户名"
            android:textColor="@color/cl_333"
            android:textSize="15sp" />

        <com.hjkj.fuduoduo.view.ClearEditText
            android:id="@+id/m_et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:hint="未填写"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/cl_444"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/cl_fff"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingBottom="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="54dp"
            android:text="昵称"
            android:textColor="@color/cl_333"
            android:textSize="15sp" />

        <com.hjkj.fuduoduo.view.ClearEditText
            android:id="@+id/m_et_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@color/transparent"
            android:hint="未填写"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/cl_444"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/cl_fff"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingBottom="17dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="39dp"
            android:text="手机号"
            android:textColor="@color/cl_333"
            android:textSize="15sp" />

        <com.hjkj.fuduoduo.view.ClearEditText
            android:id="@+id/m_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:background="@color/transparent"
            android:digits="0123456789"
            android:hint="未填写"
            android:inputType="number"
            android:lines="1"
            android:maxLength="11"
            android:maxLines="1"
            android:textColor="@color/cl_444"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/m_layout_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/cl_fff"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingBottom="17dp">

        <TextView
            android:id="@+id/m_tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="54dp"
            android:text="性别"
            android:textColor="@color/cl_333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/m_tv_write_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/m_tv_gender"
            android:text=""
            android:textColor="@color/cl_666"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_right_arrow" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_layout_birth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/cl_fff"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingTop="18dp"
        android:paddingBottom="17dp">

        <TextView
            android:id="@+id/m_tv_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="23dp"
            android:text="出生日期"
            android:textColor="@color/cl_333"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/m_tv_write_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/m_tv_birth"
            android:text=""
            android:textColor="@color/cl_666"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@mipmap/ic_right_arrow" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:text="注意：昵称是用户在互动场景下的称谓，需和用户名不同，能更有效保护购买记录等隐私信息，设置昵称还能提升福气值。"
        android:textColor="@color/cl_666"
        android:textSize="12sp" />
</LinearLayout>
