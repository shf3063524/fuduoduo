<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/cl_fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <ImageView
            android:id="@+id/m_iv_view_logistice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_view_logistics" />

        <TextView
            android:id="@+id/m_tv_freightState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/m_iv_view_logistice"
            android:text="已揽件"
            android:textColor="@color/cl_ffff7f00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/m_tv_freightCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="中通快递：328742947227"
            android:textColor="@color/cl_999"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/m_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="【榆林市】北流市场部13782299021已揽收"
        android:textColor="@color/cl_333"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/m_iv_shopping"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="30dp"
        android:background="@color/cl_f8" />
</LinearLayout>