<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/cl_fff"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingTop="16dp"
    android:paddingEnd="13dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/m_iv_head"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_all_background" />

        <TextView
            android:id="@+id/m_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="9dp"
            android:text="198****1111"
            android:textColor="@color/cl_333"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/m_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019-08-23"
            android:textColor="@color/cl_666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/m_tv_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="N°1正宫色"
            android:textColor="@color/cl_666"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/m_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="五星好评。五星好评。五星好评。五星好评。五星好评。五星好评。五星好评。五星好评。"
        android:textColor="@color/cl_333"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/m_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" />
    </RelativeLayout>
</LinearLayout>