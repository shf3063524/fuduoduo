<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f6"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/cl_fff">

        <TextView
            android:id="@+id/m_tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="福多多"
            android:textColor="@color/cl_e51C23"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/m_iv_message_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/ic_message_center" />

        <ImageView
            android:id="@+id/m_iv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@+id/m_iv_message_center"
            android:src="@mipmap/ic_seek" />
    </RelativeLayout>

    <!--<ScrollView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/m_viewPager"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <LinearLayout
                        android:id="@+id/m_point_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cl_f6"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="11dp">

                    <LinearLayout
                        android:id="@+id/m_layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_frame3_cl_fff"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="5">

                        <RelativeLayout
                            android:id="@+id/m_layout_jd"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_jd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_jdd" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_jd"
                                android:layout_marginTop="1dp"
                                android:text="京东优选"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_globe"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_globe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_globe" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_globe"
                                android:layout_marginTop="1dp"
                                android:text="乐高世界"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_reduction"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_reduction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_reduction" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_reduction"
                                android:layout_marginTop="1dp"
                                android:text="精准扶贫"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_birthday"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_birthday"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_birthday" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_birthday"
                                android:layout_marginTop="1dp"
                                android:text="生日关怀"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_marriage"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_marriage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_marriage" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_marriage"
                                android:layout_marginTop="1dp"
                                android:text="婚孕关怀"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/m_layout_one"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_frame3_bottom_cl_fff"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="5">

                        <RelativeLayout
                            android:id="@+id/m_layout_sinstroke"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_sinstroke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_sinstroke" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_sinstroke"
                                android:layout_marginTop="1dp"
                                android:text="防暑降温"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_travel"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_travel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_travel" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_travel"
                                android:layout_marginTop="1dp"
                                android:text="差旅预定"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_labour"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_labour"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_labour" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_labour"
                                android:layout_marginTop="1dp"
                                android:text="劳保用品"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_as_soon"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_as_soon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_as_soon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_as_soon"
                                android:layout_marginTop="1dp"
                                android:text="日行一善"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/m_layout_more_sort"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/m_iv_more_sort"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/ic_more_sort" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/m_iv_more_sort"
                                android:layout_marginTop="1dp"
                                android:text="更多分类"
                                android:textColor="@color/cl_666"
                                android:textSize="11sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:background="@drawable/shape_frame3_3_cl_fff"
                        android:descendantFocusability="blocksDescendants"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/m_recycler_view_sort"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" />
                    </RelativeLayout>
                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_f6">

                    <LinearLayout
                        android:id="@+id/m_layout_expert_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@mipmap/ic_expert_system"
                        android:orientation="vertical"
                        android:paddingTop="119dp"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/m_iv_new_exclusive_one"
                                    android:layout_width="0dp"
                                    android:layout_height="143dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:scaleType="fitXY" />


                                <ImageView
                                    android:id="@+id/m_iv_new_exclusive_two"
                                    android:layout_width="0dp"
                                    android:layout_height="143dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:scaleType="fitXY" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <ImageView
                                    android:id="@+id/m_iv_new_exclusive_three"
                                    android:layout_width="0dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:scaleType="fitXY" />


                                <ImageView
                                    android:id="@+id/m_iv_new_exclusive_four"
                                    android:layout_width="0dp"
                                    android:layout_height="70dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:scaleType="fitXY" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_f6"
                    android:gravity="center_horizontal"
                    android:paddingStart="12dp"
                    android:paddingTop="11dp"
                    android:paddingEnd="12dp"
                    android:weightSum="3">

                    <LinearLayout
                        android:id="@+id/m_layout_three"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <ImageView
                            android:id="@+id/m_iv_national"
                            android:layout_width="match_parent"
                            android:layout_height="170dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_all_background" />


                        <ImageView
                            android:id="@+id/m_iv_outdoor_sports"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginTop="8dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_all_background" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:layout_toEndOf="@+id/m_layout_three"
                        android:layout_weight="2">


                        <ImageView
                            android:id="@+id/m_iv_overseas"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_all_background" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/m_iv_overseas"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:weightSum="2">


                            <ImageView
                                android:id="@+id/m_iv_day_work"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_all_background" />


                            <ImageView
                                android:id="@+id/m_iv_beauty"
                                android:layout_width="0dp"
                                android:layout_height="170dp"
                                android:layout_marginStart="4dp"
                                android:layout_weight="1"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_all_background" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_f6"
                    android:paddingStart="13dp"
                    android:paddingTop="22dp"
                    android:paddingEnd="17dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="爆款热卖"
                        android:textColor="@color/cl_333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/m_iv_look_more"
                        android:text="查看更多"
                        android:textColor="@color/cl_666"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/m_iv_look_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_look_more"
                        android:visibility="gone" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cl_f6"
                    android:descendantFocusability="blocksDescendants">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/m_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />
                </RelativeLayout>
            </LinearLayout>
            <!--</ScrollView>-->
            <!--<FrameLayout-->
            <!--android:id="@+id/m_fl_main"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/cl_fff"-->
            <!--android:padding="10dp">-->

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/m_slid_tab"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/cl_f6"
                app:tl_divider_color="@color/cl_ddd"
                app:tl_divider_padding="13dp"
                app:tl_divider_width="1dp"
                app:tl_indicator_height="1.5dp"
                app:tl_indicator_width_equal_title="true"
                app:tl_tab_padding="22dp"
                app:tl_tab_space_equal="true"
                app:tl_textBold="BOTH"
                app:tl_textSelectColor="@color/cl_e51C23"
                app:tl_textUnselectColor="@color/cl_333" />

            <!--</FrameLayout>-->
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/m_viewPager_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>