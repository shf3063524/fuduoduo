<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:psd="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cl_f6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/m_layout_set_return"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="2dp"
        android:background="@color/cl_fff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@mipmap/ic_arrows_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改支付密码"
            android:textColor="@color/cl_333"
            android:textSize="17sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/m_layout_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cl_fff"
        android:paddingTop="90dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_modify_password" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="修改支付密码成功"
                android:textColor="@color/cl_e51C23"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:text="请输入新的6位支付密码"
        android:textColor="@color/cl_666"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/cl_fff">

        <com.hjkj.fuduoduo.view.PayPsdInputView
            android:id="@+id/m_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            psd:bottomLineColor="@color/cl_f6"
            psd:divideLineColor="@color/cl_f6"
            psd:maxCount="6"
            psd:psdType="weChat"
            psd:rectAngle="4dp" />
    </FrameLayout>


    <TextView
        android:id="@+id/m_tv_confirm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/shape_frame_cl_e51c23_all"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/cl_fff"
        android:textSize="14sp" />
</LinearLayout>