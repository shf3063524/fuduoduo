<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="171dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/cl_fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/m_iv_shopping"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginBottom="2dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_all_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:background="@color/cl_f6" />

    <TextView
        android:id="@+id/m_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:lines="1"
        android:maxEms="15"
        android:text="很快就收到货富士康的积分"
        android:textColor="@color/cl_333"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/m_tv_salesnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="6dp"
        android:text="已售：22"
        android:textColor="@color/cl_999"
        android:textSize="10sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_shopping_short_button" />

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/m_tv_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="320.00"
                android:textColor="@color/cl_e51C23"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="积分"
                android:textColor="@color/cl_e51C23"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>