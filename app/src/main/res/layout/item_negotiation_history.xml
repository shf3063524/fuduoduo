<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_fff"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:layout_marginBottom="10dp"
    android:paddingTop="16dp"
    android:paddingEnd="12dp"
    android:paddingBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/m_iv_head"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_all_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/m_iv_head"
            android:orientation="vertical">

            <TextView
                android:id="@+id/m_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统"
                android:textColor="@color/cl_333"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/m_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="2019-09-19 17:28:44"
                android:textColor="@color/cl_666"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/m_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="商家主动同意，退款给买家320.00 积分"
        android:textColor="@color/cl_333"
        android:textSize="14sp" />

</LinearLayout>