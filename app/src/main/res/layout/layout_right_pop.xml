<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/v_arrow"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cl_69"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="13dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/m_tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_order_message"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="13dp"
            android:paddingEnd="42dp"
            android:paddingBottom="13dp"
            android:text="  消息          "
            android:textColor="@color/cl_fff"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/cl_80" />

        <TextView
            android:id="@+id/m_tv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_order_home"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingTop="13dp"
            android:paddingEnd="42dp"
            android:paddingBottom="13dp"
            android:text="  首页          "
            android:textColor="@color/cl_fff"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/cl_80" />

        <TextView
            android:id="@+id/m_tv_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_order_personal_center"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="13dp"
            android:paddingEnd="42dp"
            android:paddingBottom="13dp"
            android:text="  个人中心"
            android:textColor="@color/cl_fff"
            android:textSize="13sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/cl_80" />

        <TextView
            android:id="@+id/m_tv_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_order_service_secret"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="13dp"
            android:paddingEnd="42dp"
            android:paddingBottom="13dp"
            android:text="  客服小秘"
            android:textColor="@color/cl_fff"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>