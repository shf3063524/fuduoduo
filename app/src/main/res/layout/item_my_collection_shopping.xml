<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/m_img_is_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="12dp"
        android:visibility="gone"
        android:src="@drawable/ic_no_check" />

    <android.support.v7.widget.CardView
        android:id="@+id/m_cv_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/m_img_is_check"
        app:cardBackgroundColor="@color/cl_fff"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/m_iv_shopping"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_all_background" />

            <TextView
                android:id="@+id/m_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/m_iv_shopping"
                android:ellipsize="end"
                android:lines="2"
                android:maxEms="18"
                android:text=""
                android:textColor="@color/cl_ff2c2c2c"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/m_tv_content"
                android:layout_marginTop="44dp"
                android:layout_toEndOf="@+id/m_iv_shopping">

                <TextView
                    android:id="@+id/m_tv_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/cl_e51C23"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/m_tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@+id/m_tv_integral"
                    android:text=""
                    android:textColor="@color/cl_999"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>