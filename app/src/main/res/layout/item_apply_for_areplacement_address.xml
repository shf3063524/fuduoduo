<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m_layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cl_fff"
    android:paddingStart="21dp"
    android:paddingTop="16dp"
    android:paddingEnd="12dp"
    android:paddingBottom="16dp">

    <ImageView
        android:id="@+id/m_iv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
      android:layout_marginTop="3dp"
        android:src="@mipmap/ic_shipping_address_default"
        android:visibility="gone" />

    <TextView
        android:id="@+id/m_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/m_iv_default"
        android:text="张三"
        android:textColor="@color/cl_333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/m_tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/m_tv_name"
        android:text="18338392812"
        android:textColor="@color/cl_333"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/m_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/m_tv_name"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxEms="20"
        android:text=""
        android:textColor="@color/cl_333"
        android:textSize="13sp" />

    <CheckBox
        android:id="@+id/m_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="22dp"
        android:button="@drawable/check_box_bg"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:checked="false"
        android:clickable="false"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>