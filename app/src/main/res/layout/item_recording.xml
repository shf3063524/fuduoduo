<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/cl_fff"
    android:orientation="horizontal"
    android:paddingStart="12dp"
    android:paddingEnd="17dp">

    <ImageView
        android:id="@+id/m_iv_flower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_flower" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/m_iv_flower"
        android:orientation="vertical">

        <TextView
            android:id="@+id/m_tv_pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="15"
            android:text="购买【手剥巴旦木120g*2】零食…"
            android:textColor="@color/cl_333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/m_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/m_tv_pay_name"
            android:layout_marginTop="4dp"
            android:text="2019-08-11  12:15:35"
            android:textColor="@color/cl_666"
            android:textSize="12sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/m_tv_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:text="-210"
        android:textColor="@color/cl_333"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/cl_f6" />
</RelativeLayout>