<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="171dp"
    android:layout_height="271dp"
    android:layout_marginStart="12dp"
    android:layout_marginBottom="10dp"
    android:background="@color/cl_fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/m_iv_shopping"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_all_background" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/cl_f6" />

    <TextView
        android:id="@+id/m_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:ellipsize="end"
        android:lines="2"
        android:maxEms="8"
        android:text=""
        android:textColor="@color/cl_666"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/m_tv_integral_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/cl_e51C23"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/m_tv_integral_one"
            android:text="积分"
            android:textColor="@color/cl_e51C23"
            android:textSize="8sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/m_tv_salesnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="1dp"
        android:text=""
        android:textColor="@color/cl_999"
        android:textSize="11sp" />
</LinearLayout>