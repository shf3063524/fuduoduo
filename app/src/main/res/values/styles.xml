<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/cl_fff</item>
        <item name="colorPrimaryDark">@color/cl_fff</item>
        <item name="colorAccent">@color/cl_fff</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionMenuTextColor">@color/cl_fff</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="styleLoadingLayout">@style/LoadingLayoutStyle</item>
    </style>
    <!-- 全局默认分割线样式 左右间距16dp background：cl_f6f1f1 -->
    <style name="view_line_global">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cl_f6</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_marginRight">12dp</item>
    </style>
    <!-- 分割线样式 match_parent background：cl_e8 -->
    <style name="view_line_e8">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/cl_f6</item>
    </style>

    <!--底部弹出dialog-->
    <style name="ActionSheetDialogStyle" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/ActionSheetDialogAnimation</item>
    </style>
    <!--QQ数字风格样式，注意每一项都不能少-->
    <style name="picture.QQ.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture.statusFontColor">false</item>
        <!--返回键图标-->
        <item name="picture.leftBack.icon">@drawable/ic_set_return</item>
        <!--标题下拉箭头-->
        <item name="picture.arrow_down.icon">@drawable/ic_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture.arrow_up.icon">@drawable/arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture.title.textColor">@color/cl_333</item>
        <!--标题栏右边文字-->
        <item name="picture.right.textColor">@color/cl_333</item>
        <!--图片列表勾选样式-->
        <item name="picture.checked.style">@drawable/selector_choose_photo_oval_bg</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture.style.checkNumMode">true</item>
        <!--选择图片样式0/9-->
        <item name="picture.style.numComplete">false</item>
        <!--图片列表底部背景色-->
        <item name="picture.bottom.bg">@color/cl_fff</item>
        <!--图片列表预览文字颜色-->
        <item name="picture.preview.textColor">@color/cl_333</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture.complete.textColor">@color/cl_333</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture.num.style">@drawable/shape_blue_oval_bg</item>
        <!--预览界面标题文字颜色-->
        <item name="picture.ac_preview.title.textColor">@color/cl_333</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture.ac_preview.complete.textColor">@color/cl_333</item>
        <!--预览界面标题栏背景色-->
        <item name="picture.ac_preview.title.bg">@color/colorPrimary</item>
        <!--预览界面底部背景色-->
        <item name="picture.ac_preview.bottom.bg">@color/black</item>
        <!--预览界面返回箭头-->
        <item name="picture.preview.leftBack.icon">@drawable/ic_set_return</item>
        <!--裁剪页面标题背景色-->
        <item name="picture.crop.toolbar.bg">@color/colorPrimary</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture.crop.status.color">@color/colorPrimary</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture.crop.title.color">@color/cl_fff</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture.folder_checked_dot">@drawable/shape_blue_oval_bg</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="ActionSheetDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/actionsheet_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/actionsheet_dialog_out</item>
    </style>
